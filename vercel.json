{
    "version": 2,
    "builds": [
      {
        "src": "backend/app.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.9"
        }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/app.py"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/build/$1"
      }
    ],
    "redirects": [
      {
        "source": "/socket.io/(.*)",
        "destination": "/api/socket.io/$1",
        "permanent": false
      }
    ],
    "env": {
      "WEBSOCKET_URL": "wss://fauna-lmsh-timer.vercel.app/api/socket.io",
      "BACKEND": "https://fauna-lmsh-timer.vercel.app/api"
    }
  }